@model IEnumerable<e_okul.Models.Bolum>

@{
    ViewData["Title"] = "Index";
}

 

<p>
    <a class="btn btn-primary" asp-action="Create">Ekle</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BolumAdi)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BolumAdi)
            </td>
            <td>
                <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.BolumId">Güncelle</a> |
                <a class="btn btn-info" asp-action="Details" asp-route-id="@item.BolumId">Detay</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.BolumId">Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>
